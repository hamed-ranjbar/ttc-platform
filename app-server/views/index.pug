extends layout

include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
        small &nbsp;#{pageHeader.strapLine}

  .row
    each program in programs
      .col-12.col-md-4
        .card
          .card-block
            img(src=program.bgImage style='width:100%')
            h4= program.name
              +outputRating(program.rating)
              span.badge.badge-pill.badge-default.float-right= program.distance
            p.description= program.description
            a.btn.btn-outline-info(type="button" href=program._id) read more

    .col-12
      p.lead= sidebar